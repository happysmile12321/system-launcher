{
  "name": "list-containers",
  "version": "1.0.0",
  "description": "列出所有容器",
  "type": "local",
  "inputs": {
    "driver": {
      "type": "string",
      "description": "容器驱动 (docker/podman)",
      "default": "docker"
    },
    "all": {
      "type": "boolean",
      "description": "是否包含停止的容器",
      "default": false
    }
  },
  "outputs": {
    "containers": {
      "type": "json",
      "description": "容器列表"
    }
  }
}
